/* pages/home/home.wxss */
.home-block{
  margin-bottom: 20rpx;
}

/* 轮播图 */
.swiper{
  margin-top: 20rpx;
  height: 380rpx;
  text-align: center;
}

.swiperImg{
  width: 90%;
  height: 90%;
  border-radius: 20rpx;
  overflow:hidden;
}
/* 每日句子 */
.sentence-block{
  margin: 28rpx 70rpx 40rpx 80rpx;
}

.sentence-title{
  font-weight: bolder;
  font-size: 20px;
  margin-bottom: 12rpx;
}

.sentence-detail{
  color: darkgrey;
}
/* 每日文章 */
.article-block{
  height: fit-content;
  margin: 0 50rpx 0 50rpx;
  padding: 20rpx 0 20rpx 0;
  display: flex;
  border-top: 1px solid rgba(222, 222, 222, 0.5);
}

.article-text{
  flex: 1;
}

.article-title{
  font-size: 16px;
  padding-bottom: 10rpx;
}

.article-time{
  font-size: 12px;
  color: darkgrey;
  padding-bottom: 10px;
}

.article-image{
  width: 300rpx;
  height: 220rpx;
  margin: 10rpx 0 0 10rpx;
}


